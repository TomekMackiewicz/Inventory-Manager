{% extends 'base.html.twig' %}

{% block body %}

  <h3>Last actions</h3>
  <table class="table table-striped">
    <tr>
      <th>id</th>
      <th>box</th>
      <th>customer</th>
      <th>action</th>
      <th>date</th>
    </tr>  
    {% for action in lastActions %}
    <tr>    
      <td>{{action.id}}</td>
      <td>{{action.box.signature}}</td>
      <td>{{action.customer.name}}</td>
      <td>{{action.action}}</td>
      <td>{{action.date|date('Y:m:d')}}</td>
    </tr>    
    {% endfor %}    
  </table>
  <hr>
  <div class="row">
    <div class="col-md-6">
      <h3>Boxes currently in: {{ boxesIn }}</h3>
    </div>
    <div class="col-md-6">
      <h3>Boxes currently out: {{ boxesOut }}</h3>      
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-6">
      <h3>Boxes in (by customers)</h3>
      <table class="table table-striped">
        <tr>
          <th>Customer</th>
          <th>Count</th>
        </tr> 
        {% for boxIn in boxesInCount %}
        <tr>    
          <td>{{ boxIn.name }}</td>
          <td>{{ boxIn.boxCount }}</td>
        </tr>    
        {% endfor %}
      </table>
    </div>
    <div class="col-md-6">
      <h3>Boxes out (by customers)</h3>
      <table class="table table-striped">
        <tr>
          <th>Customer</th>
          <th>Count</th>
        </tr> 
        {% for boxOut in boxesOutCount %}
        <tr>    
          <td>{{ boxOut.name }}</td>
          <td>{{ boxOut.boxCount }}</td>
        </tr>    
        {% endfor %}
      </table>            
    </div>
  </div>

{% endblock %}