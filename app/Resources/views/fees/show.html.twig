{% extends 'base.html.twig' %}

{% block body %}

  {% if feesTable is not null %}
    <div id="resultTable">     
      <table class="table table-striped">
        <tr>
          <td>Storage</td>
          <td>{{ feesTable.storage }} * {{ years }} years * {{ months }} months</td>
        </tr>  
        <tr>
          <td>Delivery</td>
          <td>{{ feesTable.delivery }} * {{ feesTable.actionOut }}</td>
        </tr> 
        <tr>
          <td>Import</td>
          <td>{{ feesTable.import }} * {{ feesTable.actionIn }}</td>
        </tr>
        <tr>
          <td>Sum =</td>
          <td>{{ sum }}</td>
        </tr>                                         
      </table>
    </div>    
  {% endif %} 

  <div class="modal fade" id="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Fees</h4>
        </div>
        <div class="modal-body">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->

  <h1>Fee for: {{ fee.customer.name }}</h1>

  <table class="table table-striped">
    <tbody>
      <tr>
        <th>Delivery fee</th>
        <td>{{ fee.delivery }}</td>
      </tr>
      <tr>
        <th>Import fee</th>
        <td>{{ fee.import }}</td>
      </tr>
      <tr>
        <th>Storage fee</th>
        <td>{{ fee.storage }}</td>
      </tr>
      <tr>
        <th>Customer</th>
        <td>{{ fee.customer.name }}</td>
      </tr>
    </tbody>
  </table>
  <a href="{{ path('fees_index') }}" class="btn btn-default">Back to the list</a><br>

  <a href="{{ path('fees_edit', { 'id': fee.id }) }}" class="btn btn-default">Edit</a>

  {{ form_start(delete_form) }}
    <input type="submit" value="Delete" class="btn btn-danger">
  {{ form_end(delete_form) }}

  <h2>Calculate Fee</h2>
  {{ form_start(calculateFeesForm, {'attr': {'id': 'calc'}}) }}

    {{ form_widget(calculateFeesForm) }}
    <input type="submit" value="Calculate" id="modalShow" class="btn btn-default" data-toggle="modal" data-target="#modal" />
  {{ form_end(calculateFeesForm) }}
  
  {% if datesError is not null %}
    <div class="alert alert-danger" role="alert">{{ datesError }}</div>
  {% endif %}
   
{% endblock %}